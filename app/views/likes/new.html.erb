<section class="container">
    <% flash.each do |type, msg| %>
        <div class="alert alert-primary" role="alert">
            <%= msg %>
        </div>
    <% end %>
    <div class="card">
        <div class="card-header">
            <h2>Add a like to this post </h2>
        </div>
        <div class="card-body">
            <%= form_with model: @like, url: user_post_likes_path, class: "flex flex--column" do |form|%>
                <div class="form-group">
                    <%= form.submit 'Create', class: 'btn btn-primary' %>
                </div>
            <%end%>
        </div>
    </div>
</section>
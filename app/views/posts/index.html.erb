
 <section class='post-section'>
 <%= render partial: 'shared/single_user', locals: { user: @user } %>

<% @posts.includes(:comment).each do |post| %>
    <div class='det-post'><h2><%= link_to post.title, user_post_path(post.author_id, post.id) %></h2>
    <p><%= post.text %></p>
    <p>comments: <%= post.comments_counter %></p>
      <p>likes: <%= post.likes_counter %></p>
    </div>
    <div class='comment-card'>
    <% post.recent_comments.each do |comment| %>
      <div>
        <p><%= comment.author.name %>: <span class='comment-content'><%= comment.text %></span></p>
      </div>
    <% end %></div>
<% end %>
<button>pagination</button>
 </section>